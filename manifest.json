{
  "name": "Sheet Copier",
  "description": "Make a view-only Google Sheet copyable.",
  "version": "0.1",
  "manifest_version": 2,
  "options_ui": {
        "page": "options.html",
        "chrome_style": true
    },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "browser_action": {
    "default_title": "Ctrl+Shift+D for current tab",
    "default_icon": "images/icon128.png",
    "default_popup": "popup.html"
  },
  "commands": {
    "open-copyable-sheet": {
      "suggested_key": {
        "default": "Shift+Alt+D",
        "mac": "Shift+Alt+D"
      },
      "description": "Open copyable sheet"
    }
  },
  "permissions": [
        "storage",
        "tabs",
        "*://sheets.google.com/"
    ],
    "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'"
}
